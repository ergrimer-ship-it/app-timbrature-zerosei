rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
       return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Helper to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read their own profile. Admins can read all.
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow users to create their profile during registration, BUT enforce isAdmin is false
      // This prevents a malicious user from registering as Admin by manipulating the request
      allow create: if isOwner(userId) && (
        !('isAdmin' in request.resource.data) || request.resource.data.isAdmin == false
      );
      
      // Only admins can update/delete users generally
      allow update, delete: if isAdmin();
      
      // Subcollections
      match /shifts/{shiftId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      match /documents/{docId} {
         // Users can read their docs, Admins can read/write
         allow read: if isOwner(userId) || isAdmin();
         allow write: if isAdmin();
      }
      
      match /salaryAdvances/{id} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
      
      match /futureLeaves/{id} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
    }

    // Public Users - Safe profile data for everyone
    match /publicUsers/{userId} {
      // Authenticated users can read basic info (name/surname)
      allow read: if request.auth != null;
      // Admins and the user themselves can write
      allow write: if isAdmin() || isOwner(userId);
    }

    // Active Shifts - used for tracking who is currently working
    match /activeShifts/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Assigned Shifts - Global roster
    match /assignedShifts/{docId} {
       allow read: if request.auth != null;
       allow write: if isAdmin();
    }
  }
}

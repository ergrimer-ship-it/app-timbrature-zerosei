const CACHE_NAME = 'zerosei-timbrature-cache-v1';

// On install, log that the service worker is installing.
self.addEventListener('install', event => {
  console.log('Service Worker installing.');
  // Skip waiting to activate the new SW immediately.
  self.skipWaiting();
});

// On activation, clean up old caches.
self.addEventListener('activate', event => {
  console.log('Service Worker activating.');
  const cacheWhitelist = [CACHE_NAME];
  event.waitUntil(
    caches.keys().then(cacheNames => {
      return Promise.all(
        cacheNames.map(cacheName => {
          if (cacheWhitelist.indexOf(cacheName) === -1) {
            console.log('Deleting old cache:', cacheName);
            return caches.delete(cacheName);
          }
        })
      );
    })
  );
});

// On fetch, use a stale-while-revalidate strategy.
self.addEventListener('fetch', event => {
  // Let the browser do its default thing for non-GET requests.
  if (event.request.method !== 'GET') {
    return;
  }
  
  // Prevent the default, and handle the request ourselves.
  event.respondWith(async function() {
    const cache = await caches.open(CACHE_NAME);
    const cachedResponse = await cache.match(event.request);

    // Prepare a promise that will fetch the request from the network.
    const fetchedResponsePromise = fetch(event.request).then(networkResponse => {
        if (networkResponse && networkResponse.status === 200) {
            cache.put(event.request, networkResponse.clone());
        }
        return networkResponse;
    }).catch(err => {
        console.warn('Failed to fetch from network for', event.request.url, err);
        // If the network fails and we don't have a cached response, we'll eventually fail.
        // This rejection will be caught by the outer try/catch block if cachedResponse is also null.
        throw err;
    });

    // Return the cached response if it's found.
    // Meanwhile, the network request is still happening in the background to update the cache.
    if (cachedResponse) {
      return cachedResponse;
    }

    // If the resource was not in the cache, we wait for the network response.
    try {
        return await fetchedResponsePromise;
    } catch (error) {
        console.error("Network request failed and no cache available:", error);
        // Here you could return a fallback offline page if you have one cached.
        return new Response("Network error: You are offline.", {
            status: 408,
            headers: { "Content-Type": "text/plain" },
        });
    }
  }());
});
